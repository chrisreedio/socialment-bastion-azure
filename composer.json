{
    "name": "chrisreedio/socialment-bastion-azure",
    "description": "Provides a Bridge between Socialment, Bastion, and Azure AD.",
    "keywords": [
        "chrisreedio",
        "laravel",
        "socialment-bastion-azure"
    ],
    "homepage": "https://github.com/chrisreedio/socialment-bastion-azure",
    "support": {
        "issues": "https://github.com/chrisreedio/socialment-bastion-azure/issues",
        "source": "https://github.com/chrisreedio/socialment-bastion-azure"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Reed",
            "email": "chris@reedtech.us",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "chrisreedio/bastion": "dev-spa",
        "chrisreedio/laravel-azure-graph": "dev-user-delta",
        "chrisreedio/socialment": "dev-save-previous-url",
        "filament/filament": "^3.0",
        "illuminate/contracts": "^10.0",
        "socialiteproviders/microsoft-azure": "^5.1",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ChrisReedIO\\SocialmentBastionAzure\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChrisReedIO\\SocialmentBastionAzure\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ChrisReedIO\\SocialmentBastionAzure\\SocialmentBastionAzureServiceProvider"
            ],
            "aliases": {
                "SocialmentBastionAzure": "ChrisReedIO\\SocialmentBastionAzure\\Facades\\SocialmentBastionAzure"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "/home/chris/dev/chrisreedio/packages/laravel/laravel-azure-graph"
        },
        {
            "type": "path",
            "url": "/home/chris/dev/chrisreedio/packages/filament/socialment"
        },
        {
            "type": "path",
            "url": "/home/chris/dev/chrisreedio/packages/filament/bastion"
        }
    ]
}
